<%= link_to RailsMail::Engine.routes.url_helpers.email_path(email, format: :turbo_stream), 
      class: "block px-3 py-2 rounded-md #{params[:id] == email.id.to_s ? 'bg-gray-100' : 'hover:bg-gray-50'}", 
      data: { 
        "turbo-frame": "email_content",
        "turbo-action": "advance",
        "turbo-prefetch": "false"
      } do %>
  <div class="text-sm font-medium text-gray-900 truncate"><%= email.subject %></div>
  <div class="text-xs text-gray-500">
    <span class="truncate"><%= email.from %></span>
    <span class="ml-2 text-gray-400"><%= time_ago_in_words(email.created_at) %> ago</span>
  </div>
<% end %> 